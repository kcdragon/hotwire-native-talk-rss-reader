<%= turbo_stream_from @feed %>

<%= content_for :title, @feed.title %>

<div class="max-w-4xl mx-auto p-6 space-y-6">
  <%= render "feeds/card", feed: @feed %>

  <div class="space-y-4">
    <h2 class="text-xl font-semibold">Entries</h2>
    <% if @feed.entries.any? %>
      <div class="flex flex-col gap-4">
        <% @feed.entries.order(published_at: :desc).each do |entry| %>
          <%= render "entries/card", entry: entry %>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted-foreground">
        No entries found for this feed.
      </p>
    <% end %>
  </div>
</div>
