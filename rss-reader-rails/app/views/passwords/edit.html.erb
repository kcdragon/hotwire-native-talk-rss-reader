<%= content_for :title, "Update your password" %>

<div class="mx-auto mt-28 px-5 md:w-2/3 w-full grid gap-6">
  <h1 class="hotwire-native:hidden font-bold text-4xl">Update your password</h1>

  <%= form_with url: password_path(params[:token]), method: :put, class: "form grid gap-6" do |form| %>
    <div class="grid gap-2">
      <%= form.label :password, "New password" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password" %>
    </div>

    <div class="grid gap-2">
      <%= form.label :password_confirmation, "Confirm new password" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
    </div>

    <%= form.submit "Save", class: "btn w-full" %>
  <% end %>
</div>
