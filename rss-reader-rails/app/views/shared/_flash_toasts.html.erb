<% if flash[:notice].present? %>
  <div class="hotwire-native:hidden toast" role="status" aria-atomic="true" data-category="success" data-controller="bridge--toast toast" data-bridge-message="<%= flash[:notice] %>" data-action="turbo:load@window->bridge--toast#show">
    <div class="toast-content">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <circle cx="12" cy="12" r="10" />
        <path d="m9 12 2 2 4-4" />
      </svg>
      <section>
        <h2><%= flash[:notice] %></h2>
      </section>
    </div>
  </div>
<% end %>

<% if flash[:alert].present? %>
  <div class="hotwire-native:hidden toast" role="status" aria-atomic="true" data-category="error" data-controller="bridge--toast toast" data-bridge-message="<%= flash[:alert] %>" data-action="turbo:load@window->bridge--toast#show">
    <div class="toast-content">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <circle cx="12" cy="12" r="10" />
        <line x1="12" x2="12" y1="8" y2="12" />
        <line x1="12" x2="12.01" y1="16" y2="16" />
      </svg>
      <section>
        <h2><%= flash[:alert] %></h2>
      </section>
    </div>
  </div>
<% end %>
